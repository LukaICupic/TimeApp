@model ReportCreateViewModel

@{
    ViewBag.Title = "Create report";
}
    <head>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.css" rel="stylesheet" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.css" rel="stylesheet" />

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.js" type="text/javascript"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
    </head>

<h3>Create report</h3>
<br />

<form method="post" asp-action="AddReport">

    <div class="form-group">
        <label asp-for="FirstName">First name</label>
        <div>
            <input asp-for="FirstName" class="col-sm-2 col-form-label" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <br />
        <label asp-for="LastName">Last name</label>
        <div>
            <input asp-for="LastName" class="col-sm-2 col-form-label" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <br />
 
    <div class="form-group">
        <div class='col-sm-2 col-form-label'>
            <label asp-for="Time">Time</label>
            <div class='input-group date' id='datetimepicker1'>
                <input asp-for="Time" type='text' class="form-control" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-time"></span>
                </span>
            </div>

            <br />
            <br />
            <button type="submit"
                    class="btn btn-primary">
                Create
            </button>

            <a asp-action="index" class="btn btn-secondary"
               onclick="return confirm('The report will not be saved if you continue with this operation.')">
                Cancel
            </a>
        </div>
    </div>


        <script type="text/javascript">

            var date = new Date(2000, 1, 1);

            $(function () {
                $('#datetimepicker1').datetimepicker({
                    format: 'HH:mm:ss',
                });
            });
        </script>
</form>